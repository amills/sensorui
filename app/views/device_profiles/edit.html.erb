<h1>Editing device_profile</h1>

<% form_for(@device_profile) do |f| %>
  <%= f.error_messages %>

  <p>
    <%= f.label :name %><br />
    <%= f.text_field :name %>
  </p>
  <p>
    <%= f.label :mobile_asset %><br />
    <%= f.check_box :mobile_asset %>
  </p>
  <p>
    <%= f.label :description %><br />
    <%= f.text_field :description %>
  </p>
  <p>
    <%= f.submit "Update" %>
  </p>
<% end %>

<%= link_to 'Show', @device_profile %> |
<%= link_to 'Back', device_profiles_path %>
