<h1>Listing devices</h1>

<table>
  <tr>
    <th>Name</th>
    <th>Imei</th>
    <th>Phone number</th>
    <th>Provision status</th>
    <th>Last online time</th>
    <th>Online threshold</th>
    <th>Device profile</th>
    <th>Gateway name</th>
  </tr>

<% for device in @devices %>
  <tr>
    <td><%=h device.name %></td>
    <td><%=h device.imei %></td>
    <td><%=h device.phone_number %></td>
    <td><%=h device.provision_status_id %></td>
    <td><%=h device.last_online_time %></td>
    <td><%=h device.online_threshold %></td>
    <td><%=h device.device_profile_id %></td>
    <td><%=h device.gateway_name %></td>
    <td><%= link_to 'Show', device %></td>
    <td><%= link_to 'Edit', edit_device_path(device) %></td>
    <td><%= link_to 'Destroy', device, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

